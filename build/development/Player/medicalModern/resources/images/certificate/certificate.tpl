<!DOCTYPE html>
<html>
<head></head>
<body>
        <img src="{background}" style="position: absolute; width:{width}; height:{height}; " />
    <div id="certificate" class="certificate" style="position: absolute;
                                           width:{width}; height:{height};
                                           ">
        <div class="content" style="position: absolute; padding: 90px; vertical-align: middle; width:{width}; height:{height};">

            <div class="main-title" style="font-weight:bold; font-size: 42px; text-align: center;">Certificate of Completion</div>

            <!-- username -->
            <div class="label title-label" style="font-weight:bold;  text-align: center;">Awarded To:</div>
            <div class="title" style=" text-align: center;">{username}</div>
            <!-- /username -->

            <!-- coursetitle -->
            <div class="label title-label" style="font-weight:bold;  text-align: center;">For the successful completion of:</div>
            <div class="title" style=" text-align: center;">{coursetitle}</div>
            <!-- /coursetitle -->

            <!-- description -->
            <div class="label description-label" style="font-weight:bold;  text-align: center;">Course Description:</div>
            <div class="description" style=" text-align: center;">{description}</div>
            <!-- /description -->

            <!-- date -->
            <center>
                <div class="label date-label" style="font-weight:bold;">On:</div>
                <div class="date" style="padding-left: 6px; ">{date}</div>
            </center>
            <!-- /date -->

            <!-- logo -->
            <img class="date" src="{logo}" style="float:right; 
            max-width: 170px;
            max-height: 170px;"/>
            <!-- /logo -->

        </div>
    </div>
</body>
</html>

